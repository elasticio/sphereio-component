{
    "title": "Sphere.io",
    "version": "1.0.2",
    "description": "SPHERE.IO is the most versatile cloud based commerce platform. You can call it Software-as-a-Service or Platform-as-a-Service - we call it: Cloud eCommerce OS.",
    "buildType": "docker",
    "docsUrl": "http://go2.elastic.io/sphereio-component",
    "external": true,
    "credentials": {
        "fields": {
            "project": {
                "label": "Project Name",
                "required": true,
                "viewClass": "TextFieldView"
            },
            "client": {
                "label": "Client ID",
                "required": true,
                "viewClass": "TextFieldView"
            },
            "clientSecret": {
                "label": "Client Secret",
                "required": true,
                "viewClass": "TextFieldView"
            }
        }
    },
    "triggers": {
        "getCustomers": {
            "main": "./lib/triggers/queryCustomers.js",
            "title": "Query Customers",
            "type": "polling",
            "metadata": {
                "out": "./lib/schemas/queryCustomers.out.json"
            },
            "fields": {
                "where": {
                    "label": "Additional predicate to filter customers",
                    "required": false,
                    "viewClass": "TextFieldView"
                }
            }
        },
        "getOrders": {
            "main": "./lib/triggers/queryOrders.js",
            "title": "Query Orders",
            "dynamicMetadata": true,
            "type": "polling",
            "metadata": {
                "out": "./lib/schemas/queryOrders.out.json"
            },
            "fields": {
                "where": {
                    "label": "Additional predicate to filter orders",
                    "required": false,
                    "viewClass": "TextFieldView"
                },
                "expandCustomerExternalId": {
                    "label": "Expand customers",
                    "viewClass": "CheckBoxView"
                },
                "expandPaymentInfo": {
                    "label": "Expand payment information",
                    "viewClass": "CheckBoxView"
                },
                "withSyncedCustomersOnly": {
                    "label": "Only orders of customers with External ID set",
                    "viewClass": "CheckBoxView"
                }
            }
        }
    },
    "actions": {
        "updateCustomer": {
            "main": "./lib/actions/updateCustomer.js",
            "title": "Update a customer",
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "Customer id",
                            "type": "string",
                            "required": true
                        },
                        "external_id": {
                            "title": "External id",
                            "type": "string",
                            "required": false
                        }
                    }
                },
                "out": "./lib/schemas/updateCustomer.out.json"
            }
        },
        "createProduct": {
            "main": "./lib/actions/createProduct.js",
            "title": "Create a product",
            "fields": {
                "productType": {
                    "viewClass": "SelectView",
                    "label": "Product type",
                    "required": false,
                    "model": "getProductTypeSelectModel",
                    "prompt": "Please select a product type"
                }
            },
            "dynamicMetadata": true
        },
        "addPriceToVariant": {
            "main": "./lib/actions/addPrice.js",
            "title": "Add/Update Price to Variant",
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "productId": {
                            "title": "Product ID",
                            "type": "string",
                            "required": true
                        },
                        "variantId": {
                            "title": "Variant ID",
                            "type": "string",
                            "required": true
                        },
                        "amount": {
                            "title": "Price amount",
                            "type": "number",
                            "required": true
                        },
                        "currency": {
                            "title": "Price currency",
                            "type": "string",
                            "required": true
                        }
                    }
                }
            }
        },
        "getProductVariant": {
            "main": "./lib/actions/queryProductVariant.js",
            "title": "Query Product Variant By SKU",
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "Variant SKU",
                            "type": "string",
                            "required": true
                        },
                        "amount": {
                            "title": "Price amount",
                            "type": "number",
                            "required": true
                        },
                        "currency": {
                            "title": "Price currency",
                            "type": "string",
                            "required": true
                        }
                    }
                },
                "out": {
                    "type": "object",
                    "properties": {
                        "productId": {
                            "title": "Product ID",
                            "type": "string",
                            "required": true
                        },
                        "variantId": {
                            "title": "Variant ID",
                            "type": "string",
                            "required": true
                        },
                        "amount": {
                            "title": "Price amount",
                            "type": "number",
                            "required": true
                        },
                        "currency": {
                            "title": "Price currency",
                            "type": "string",
                            "required": true
                        }
                    }
                }
            }
        },
        "getCustomerByID": {
            "main": "./lib/actions/getCustomerByID.js",
            "title": "Get Customer By ID",
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "Customer id",
                            "type": "string",
                            "required": true
                        }
                    }
                },
                "out": "./lib/schemas/updateCustomer.out.json"
            }
        },
        "getOrderByID": {
            "main": "./lib/actions/getOrderByID.js",
            "title": "Get Order By ID",
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "Order id",
                            "type": "string",
                            "required": true
                        }
                    }
                },
                "out": "./lib/schemas/getOrderByID.out.json"
            }
        },
        "addVariant": {
            "main": "./lib/actions/addVariant.js",
            "title": "Add Product Variant",
            "fields": {
                "productType": {
                    "viewClass": "SelectView",
                    "label": "Product type",
                    "required": false,
                    "model": "getProductTypeSelectModel",
                    "prompt": "Please select a product type"
                }
            },
            "dynamicMetadata":true
        },
        "setOrderNumber": {
            "main": "./lib/actions/setOrderNumber.js",
            "title": "Set Order Number",
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "orderId": {
                            "title": "Order ID",
                            "type": "string",
                            "required": true
                        },
                        "orderNumber": {
                            "title": "Order number",
                            "type": "string",
                            "required": true
                        }
                    }
                }
            }
        },
        "addDelivery": {
            "main": "./lib/actions/addDelivery.js",
            "title": "Add a Delivery",
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "orderNumber": {
                            "title": "Order Number",
                            "type": "string",
                            "required": true
                        },
                        "lineItemId": {
                            "title": "ID of the line item being delivered",
                            "type": "string",
                            "required": true
                        },
                        "quantity": {
                            "title": "Quantity",
                            "type": "number",
                            "required": true
                        },
                        "parcelId": {
                            "title": "Unique parcel ID",
                            "type": "string",
                            "required": false
                        },
                        "trackingId": {
                            "title": "Tracking ID to track the delivery",
                            "type": "string",
                            "required": false
                        }
                    }
                },
                "out": {
                    "type": "object",
                    "properties": {
                        "orderId": {
                            "title": "Order ID",
                            "type": "string",
                            "required": true
                        }
                    }
                }
            }
        },
        "changeShipmentState": {
            "main": "./lib/actions/changeShipmentState.js",
            "title": "Change shipment state",
            "type": "polling",
            "fields": {
                "shipmentState": {
                    "label": "Shipment state",
                    "viewClass": "SelectView",
                    "required": true,
                    "model": {
                        "Shipped":"Shipped",
                        "Ready":"Ready",
                        "Pending":"Pending",
                        "Partial":"Partial",
                        "Backorder":"Backorder"
                    },
                    "prompt": "Please select"
                }
            },
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "orderId": {
                            "title": "Order ID",
                            "type": "string",
                            "required": true
                        }
                    }
                },
                "out": {
                    "type": "object",
                    "properties": {
                        "orderId": {
                            "title": "Order ID",
                            "type": "string",
                            "required": true
                        }
                    }
                }
            }
        },
        "importInventory": {
            "main": "./lib/actions/importInventory.js",
            "title": "Import Inventory",
            "metadata": {
                "in": "./lib/schemas/importInventory.in.json",
                "out": "./lib/schemas/importInventory.out.json"
            }
        }
    }
}
